<style is:global>
  :root {
  }

  a {
    text-decoration: none;
  }

  /* unvisited link */
  a:link {
    color: orangered;
  }

  a:is(:hover, :focus) {
    color: green;
  }

  /* visited link */
  a:visited {
    color: blueviolet;
  }

  /* selected link */
  a:active {
    color: inherit;
  }
</style>
