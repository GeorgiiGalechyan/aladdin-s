<style lang="scss" is:global>
  a {
    text-decoration: none;
  }

  /* unvisited link */
  a:link {
    color: orangered;
  }

  a:is(:hover, :focus) {
    opacity: 0.7;
  }

  /* visited link */
  a:visited {
    color: blueviolet;
  }

  /* selected link */
  a:active {
    color: inherit;
  }
</style>
